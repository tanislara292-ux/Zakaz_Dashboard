# Google service account JSON absolute path or relative to repo
GOOGLE_SA_JSON_PATH=secrets/google-sa.json

# Main spreadsheet (BI_Central) ID (from the URL)
SPREADSHEET_ID=1g6VsGXHSW7heySu9P7Msdpb1glT0KPaHEzzJTn8Wi0k

# Timezone for reporting (e.g., Europe/Moscow)
REPORT_TZ=Europe/Moscow

# Alert emails (comma-separated), optional
ALERT_EMAILS=

# VK Ads ingestion service
VK_ACCESS_TOKEN=
VK_ACCOUNT_ID=
# Optional for агентский кабинет
VK_CLIENT_ID=
# Comma separated list or * for all campaigns
VK_CAMPAIGN_IDS=*
VK_IDS_TYPE=ad
VK_PERIOD=day
VK_METRICS=spent,clicks,impressions
# Override default date range (yesterday => today)
VK_DATE_FROM=
VK_DATE_TO=
VK_SHEET_NAME=VK_Ads
# Utility flags
VK_DRY_RUN=0
VK_OUTPUT_CSV=

# ClickHouse configuration
CLICKHOUSE_ADMIN_PASSWORD=change_me
CLICKHOUSE_ETL_WRITER_PASSWORD=change_me
CLICKHOUSE_DATALENS_READER_PASSWORD=change_me
CLICKHOUSE_BACKUP_USER_PASSWORD=change_me
CLICKHOUSE_ADMIN_MIN_PASSWORD=change_me

# Backup configuration
BACKUP_MODE=s3  # s3 or local
BACKUP_DIR=/opt/clickhouse/backups  # for local mode
FULL_RETENTION_DAYS=28  # Full backups retention
INCR_RETENTION_DAYS=7   # Incremental backups retention
GOLDEN_RETENTION_MONTHS=12  # Golden backups retention

# S3 configuration (for backup_mode=s3)
S3_BUCKET=your-backup-bucket
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key

# QTickets API для CDC
QTICKETS_API_URL=https://api.qtickets.com/v1
QTICKETS_API_TOKEN=<your_qtickets_api_token>

# NRT/CDC настройки
NRT_INTERVAL_MIN=10
SAFETY_LAG_MIN=45
CDC_WINDOW_DAYS=3

# Алерты в Telegram
TG_BOT_TOKEN=<your_telegram_bot_token>
TG_CHAT_ID=<your_telegram_chat_id>
