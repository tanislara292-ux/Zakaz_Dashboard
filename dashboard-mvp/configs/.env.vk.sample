# VK Ads API Configuration
# Скопируйте этот файл в secrets/.env.vk и заполните реальные значения

# API токен для доступа к VK Ads API
VK_TOKEN=your_vk_ads_api_token_here

# ID рекламных кабинетов (через запятую)
VK_ACCOUNT_IDS=123456789,987654321

# Количество дней для загрузки исторических данных (по умолчанию 30)
VK_DAYS_BACK=30

# URL API VK Ads (обычно не меняется)
VK_API_URL=https://api.vk.com/method

# Версия API VK
VK_API_VERSION=5.131

# Таймаут запросов в секундах
VK_TIMEOUT=30

# Настройки логирования
LOG_LEVEL=INFO
LOG_JSON=false
LOG_FILE=logs/vk_ads.log