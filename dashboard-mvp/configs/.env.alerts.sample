# Alerts Configuration
# Скопируйте этот файл в secrets/.env.alerts и заполните реальные значения

# SMTP настройки для отправки уведомлений
SMTP_HOST=smtp.yandex.ru
SMTP_PORT=587
SMTP_USER=your_email@yandex.ru
SMTP_PASSWORD=your_app_password_here
SMTP_USE_TLS=true

# Адреса для отправки алертов (через запятую)
ALERT_EMAIL_TO=ads-irsshow@yandex.ru,admin@example.com

# Настройки логирования
LOG_LEVEL=INFO
LOG_JSON=false
LOG_FILE=logs/alerts.log